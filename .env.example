# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading Parameters
TRADING_MODE=paper  # Options: paper, live, testnet
RISK_MANAGEMENT_ENABLED=true
MAX_POSITION_SIZE=1000
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=5.0
MAX_DAILY_LOSS=500
MAX_DAILY_TRADES=50

# Trading Timeframes
TIMEFRAME_5MIN=true
TIMEFRAME_1H=true
TIMEFRAME_12H=true

# Trading Hours (UTC)
TRADING_START_HOUR=0
TRADING_END_HOUR=23
TRADING_DAYS=Monday,Tuesday,Wednesday,Thursday,Friday,Saturday,Sunday

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model Paths
MODEL_PATH_5MIN=./live_demo/models/
MODEL_PATH_1H=./live_demo_1h/models/
MODEL_PATH_12H=./live_demo_12h/models/

# Model Parameters
MODEL_CONFIDENCE_THRESHOLD=0.7
MODEL_RETRAIN_FREQUENCY=24  # hours
MODEL_BACKTEST_ENABLED=true
MODEL_CROSS_VALIDATION_FOLDS=5

# Feature Engineering
FEATURE_WINDOW_SIZE=100
FEATURE_SCALING_ENABLED=true
FEATURE_SELECTION_ENABLED=true
FEATURE_CORRELATION_THRESHOLD=0.95

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json
LOG_FILE_PATH=./logs/
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=60  # seconds
ALERT_EMAIL=your_email@example.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30  # seconds
HEALTH_CHECK_TIMEOUT=10  # seconds
HEALTH_CHECK_RETRIES=3

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Connection (if using external database)
DATABASE_URL=postgresql://username:password@localhost:5432/trading_bot
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TIMEOUT=5

# =============================================================================
# API RATE LIMITING
# =============================================================================

# Rate Limiting Configuration
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_BURST_SIZE=10
API_RATE_LIMIT_WINDOW_SIZE=60

# Retry Configuration
API_RETRY_ENABLED=true
API_RETRY_MAX_ATTEMPTS=3
API_RETRY_DELAY=1  # seconds
API_RETRY_BACKOFF_MULTIPLIER=2

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24

# API Security
API_KEY_REQUIRED=true
API_KEY_HEADER=X-API-Key
CORS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Performance Settings
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLING_RATE=0.1
PERFORMANCE_METRICS_RETENTION_DAYS=7

# Memory Management
MEMORY_LIMIT_MB=2048
MEMORY_WARNING_THRESHOLD=0.8
MEMORY_CLEANUP_INTERVAL=300  # seconds

# CPU Management
CPU_LIMIT_CORES=2
CPU_WARNING_THRESHOLD=0.8
CPU_MONITORING_INTERVAL=60  # seconds

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Notifications
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_password
EMAIL_FROM_ADDRESS=your_email@gmail.com
EMAIL_TO_ADDRESSES=admin@yourdomain.com,alerts@yourdomain.com

# Slack Notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#trading-alerts
SLACK_USERNAME=TradingBot

# Discord Notifications
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id
DISCORD_USERNAME=TradingBot

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
DEBUG_MODE=false
DEVELOPMENT_MODE=false
TESTING_MODE=false
MOCK_API_CALLS=false

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

# Dashboard Password (for frontend login protection)
# Default: metastacker2024
# Change this to a secure password for production
DASHBOARD_PASSWORD=metastacker2024

# Development Tools
PROFILING_ENABLED=false
PROFILING_OUTPUT_PATH=./profiling/
CODE_COVERAGE_ENABLED=false
CODE_COVERAGE_THRESHOLD=80

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups/
BACKUP_COMPRESSION_ENABLED=true

# Recovery Configuration
RECOVERY_MODE=false
RECOVERY_CHECKPOINT_INTERVAL=300  # seconds
RECOVERY_AUTO_RESTART=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
FINNHUB_API_KEY=your_finnhub_api_key
POLYGON_API_KEY=your_polygon_api_key
QUANDL_API_KEY=your_quandl_api_key

# External Services Configuration
EXTERNAL_DATA_ENABLED=true
EXTERNAL_DATA_CACHE_TTL=3600  # seconds
EXTERNAL_DATA_RETRY_ATTEMPTS=3

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom Trading Strategies
CUSTOM_STRATEGY_1_ENABLED=false
CUSTOM_STRATEGY_1_NAME=CustomStrategy1
CUSTOM_STRATEGY_1_PARAMETERS={"param1": "value1", "param2": "value2"}

CUSTOM_STRATEGY_2_ENABLED=false
CUSTOM_STRATEGY_2_NAME=CustomStrategy2
CUSTOM_STRATEGY_2_PARAMETERS={"param1": "value1", "param2": "value2"}

# Custom Indicators
CUSTOM_INDICATOR_1_ENABLED=false
CUSTOM_INDICATOR_1_NAME=CustomIndicator1
CUSTOM_INDICATOR_1_PARAMETERS={"period": 14, "threshold": 0.5}

CUSTOM_INDICATOR_2_ENABLED=false
CUSTOM_INDICATOR_2_NAME=CustomIndicator2
CUSTOM_INDICATOR_2_PARAMETERS={"period": 20, "threshold": 0.3}

# =============================================================================
# ENVIRONMENT SPECIFIC OVERRIDES
# =============================================================================

# Production Overrides
if [ "$ENVIRONMENT" = "production" ]; then
    TRADING_MODE=live
    LOG_LEVEL=WARNING
    DEBUG_MODE=false
    DEVELOPMENT_MODE=false
    TESTING_MODE=false
    MOCK_API_CALLS=false
    PROFILING_ENABLED=false
    CODE_COVERAGE_ENABLED=false
fi

# Staging Overrides
if [ "$ENVIRONMENT" = "staging" ]; then
    TRADING_MODE=testnet
    LOG_LEVEL=INFO
    DEBUG_MODE=true
    DEVELOPMENT_MODE=true
    TESTING_MODE=true
    MOCK_API_CALLS=false
    PROFILING_ENABLED=true
    CODE_COVERAGE_ENABLED=true
fi

# Development Overrides
if [ "$ENVIRONMENT" = "development" ]; then
    TRADING_MODE=paper
    LOG_LEVEL=DEBUG
    DEBUG_MODE=true
    DEVELOPMENT_MODE=true
    TESTING_MODE=true
    MOCK_API_CALLS=true
    PROFILING_ENABLED=true
    CODE_COVERAGE_ENABLED=true
fi