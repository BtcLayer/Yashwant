# MetaStackerBandit Trading Bot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================

# Azure Container Registry
AZURE_CONTAINER_REGISTRY=tradingbotregistry.azurecr.io
ACR_USERNAME=tradingbotregistry
ACR_PASSWORD=your_acr_password_here

# Azure Resource Group and Container App
AZURE_RESOURCE_GROUP=trading-bot-rg
AZURE_CONTAINER_APP_NAME=metastacker-bandit
AZURE_CONTAINER_APP_ENVIRONMENT=trading-bot-env
AZURE_LOCATION=eastus

# Azure Key Vault (for production secrets)
AZURE_KEY_VAULT_NAME=metastackerbandit-vault
AZURE_SUBSCRIPTION_ID=your_subscription_id_here

# =============================================================================
# BINANCE API CONFIGURATION
# =============================================================================

# Binance Testnet API Keys (for testing)
BINANCE_TESTNET_API_KEY=your_binance_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_binance_testnet_api_secret_here

# Binance Mainnet API Keys (for production - use with caution)
BINANCE_MAINNET_API_KEY=your_binance_mainnet_api_key_here
BINANCE_MAINNET_API_SECRET=your_binance_mainnet_api_secret_here

# Binance API Configuration
BINANCE_BASE_URL=https://testnet.binance.vision
BINANCE_WS_URL=wss://testnet.binance.vision/ws
BINANCE_API_TIMEOUT=30
BINANCE_RATE_LIMIT=1200

# =============================================================================
# HYPERLIQUID API CONFIGURATION
# =============================================================================

# Hyperliquid API Configuration
HYPERLIQUID_BASE_URL=https://api.hyperliquid.xyz
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
HYPERLIQUID_API_KEY=your_hyperliquid_api_key_here
HYPERLIQUID_API_SECRET=your_hyperliquid_api_secret_here

# =============================================================================
# GOOGLE SHEETS CONFIGURATION
